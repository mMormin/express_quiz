<body>
  
  <!-- Navbar -->
  <header class="d-flex justify-content-between align-items-center p-3 bg-primary text-white">
    <a href="#" class="h3 text-white text-decoration-none">O'quiz</a>
    <nav class="my-1">
        <a class="p-2 text-white" href="#">Accueil</a>
        <a class="p-2 text-white" href="#">Sujets</a>
        <a class="p-2 text-white" href="#">S'inscrire</a>
        <a class="p-2 text-white" href="#">Se connecter</a>
    </nav>
  </header>


  <main class="container py-4">

    <h1 class="text-center m-2"><%= quizById.title %></h1>
  
    <h2 class="text-center m-2"><%= quizById.description %></h1>
  
    <h2 class="small text-end">Par <%= quizById.author.firstname %> <%= quizById.author.lastname %></h2>
  
    <h2 class="small text-end">Date de création : <%= quizById.created_at %></h2>
  
    <h3>Thèmes</h3>
    <ul class="mb-4 p-0">

      <% for (const tag of quizById.tags) { %>
        <li class="badge bg-primary"><%= tag.name %></li>
      <% } %>

      </ul>

  
    <h3>Questions</h3>


    <% for (const question of quizById.questions) { %>

      <span class="badge bg-info"><%= question.level.name %></span>
      <p class="fw-bold mb-1"><%= question.description %></p>
      <div class="mb-3 ms-2">

        <% for (const answer of question.propositions) { %>
          <div>
            <input type="radio" id="#" name="#" value="#">
            <label for="#"><%= answer.description %></label>
          </div>
        <% } %>

      </div>

      </div>
      <p class="fst-italic text-secondary"><%= question.anecdote %></p>

    <% } %>
  

  
  
